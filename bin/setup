#!/bin/sh -e

cp .env.default .env

export $(cat .env | sed 's/#.*//g'| xargs)

if [ "$REPO_CREATED" = "false" ]; then
  sed -i "s/REPO_CREATED=false/REPO_CREATED=true/g" .env
  mkdir ../container
  cd ../container
  gh repo create $REPONAME --private --clone
  
  cd $REPONAME
  git init
  git checkout -B main
else 
  cd ../$REPONAME
fi

