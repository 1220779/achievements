#!/bin/bash
set -e # Stop on errors

bash bin/setup

BRANCH_NAME="pair-extraordinaire"

printf "Enter 1st author name here by format: Name Here <their@email.here>\n> "
read first
printf "Enter 2nd author name here by format: Name Here <their@email.here>\n> "
read second
printf "Enter 3rd author name here by format: Name Here <their@email.here>\n> "
read third

for i in {0..48}
do
  git checkout -B $BRANCH_NAME
  message="An empty commit.\n\nCo-authored-by: $first\nCo-authored-by: $second\nCo-authored-by: $third"
  git commit --allow-empty -m $message
  git push -u origin $BRANCH_NAME
  gh pr create -f
  gh pr merge --merge --delete-branch

  sleep 40
done

bash bin/clean