#!/bin/bash
set -e # Stop on errors

bash bin/setup

BRANCH_NAME="pullshark"

for i in {0..1024}
do
  git checkout -B $BRANCH_NAME
  git commit --allow-empty -m "A commit message."
  git push -u origin $BRANCH_NAME

  gh pr create -f
  gh pr merge --merge --delete-branch

  sleep 20
done

bash bin/teardown